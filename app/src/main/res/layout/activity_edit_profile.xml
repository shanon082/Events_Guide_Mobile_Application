<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".EditProfile">

    <ImageButton
        android:id="@+id/arrow_exitedit"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit profile"
        android:textColor="@color/priblue"
        android:layout_toRightOf="@+id/arrow_exitedit"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:layout_marginLeft="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provide your details"
        android:textColor="@color/black"
        android:layout_below="@+id/textView"
        android:layout_marginTop="7dp"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/person"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView1"
        android:textAlignment="center"
        android:id="@+id/imagevieww"/>

    <TextView
        android:id="@+id/txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagevieww"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="Name:"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_Nameprof"
        android:inputType="text"
        android:layout_below="@+id/txtview"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/txtview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_Nameprof"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:text="Email:"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_Emailprof"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/txtview2"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtview3"
        android:layout_below="@+id/edit_Emailprof"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Bio..:"
        android:inputType="none"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/edit_Bioprof"
        android:inputType="textMultiLine"
        android:layout_below="@+id/txtview3"
        android:textSize="22sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/Save_prof"
        android:layout_below="@+id/edit_Bioprof"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/priblue"
        android:layout_marginTop="10dp"/>

</RelativeLayout>